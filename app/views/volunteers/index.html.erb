
<ol>
<% @volunteer.each do |volunteer| %>
<div class="row">
  <div class="col s12" style="background: yellow">
    <div class="col s6">
        <li>
      <%= volunteer.user.first_name %> <%= volunteer.user.last_name %>
    </li>
    </div>
    <% if current_user == volunteer.user %>
    <div class="col s6">
      <%= button_to "Change your mind?",
      { action: "delete", id: volunteer.id },
        method: :delete, data: {confirm: "Are you sure?"} %>
    </div>
    <% end %>
  </div>

</div>
<% end %>
</ol>
