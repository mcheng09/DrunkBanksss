<div class="container row splashContent" style="margin-top: 5%">
  <div class="col s10 offset-s1">
    <h3> WELCOME TO DRUNK BANK! </h3>
    <div class="row">
      <div class="col s5 offset-s1">
        <p> New user? Create an account! </p>
      </div>
      <div class="col s6">
        <p> Already have an account? Sign in! </p>
      </div>
    </div>
    <div class="container" id="homepage">
      <div class="col s6">
        <%= button_to "Signup", new_user_path, method: "get", class: "btn", id: "signup-button" %>
      </div>
      <div class="col s6">
        <%= button_to "Login", login_path, method: "get", class: "btn", id: "login-button" %>
      </div>
    </div>
  </div>
</div>
