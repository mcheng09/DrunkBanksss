<div class="container row" style="margin-top: 5%">
  <div class="col s8 offset-s2 splashContent" style="padding: 2%">
    <h4 style="text-align: center"> WELCOME TO DRUNK BANK! </h4>
    <div class="row">
      <div class="col s6">
        <p style="text-align: center"> New user? Create an account! </p>
      </div>
      <div class="col s6">
        <p> Already have an account? Sign in! </p>
      </div>
    </div>
    <div class="container" id="homepage">
      <div class="col s5">
        <%= button_to "Signup", new_user_path, method: "get", class: "btn waves-effect waves-light", id: "signup-button" %>
      </div>
      <div class="col s5 offset-s2">
        <%= button_to "Login", login_path, method: "get", class: "btn waves-effect waves-light", id: "login-button" %>
      </div>
    </div>
  </div>
</div>
